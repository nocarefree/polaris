{
    "compilerOptions": {
      "module": "ESNext",
      "declaration": true,
      "baseUrl": ".",
      "declarationDir": "./dist/types",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "jsx": "preserve",
      "target": "ESNEXT",
      "sourceMap": true,
      "lib": ["ESNEXT", "DOM"],
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "types": []
    },
    "include": ["./src/**/*"],
    "references": [{ "path": "./tsconfig.build.json" }]
}
  