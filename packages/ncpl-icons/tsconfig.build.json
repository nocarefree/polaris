{
    "compilerOptions": {
      "composite": true,
      "target": "ESNEXT",
      "module": "ESNext",
      "lib": ["ESNEXT"],
      "baseUrl": ".",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "types": ["node"],
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["build", "package.json"]
  }
  